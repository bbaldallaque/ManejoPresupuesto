@model TipoCuenta
@{
	ViewData["Title"] = "Crear tipo de Cuentas";
}

<h1>Crear tipo de Cuentas</h1>
<h5>El tipo de cuentas se refiere a como podemos agrupar cuentas.
	Ejmplo: Prestamos, tarjeta de creditos, etc.
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear">
	<div class="mb-3">
		<label asp-for="Nombre" class="form-label">Nombre</label>
		<input type="text" asp-for="Nombre" class="form-control" />
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Enviar</button>
	<a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}