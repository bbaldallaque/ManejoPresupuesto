@model IEnumerable<IndiceCuentaViewModel>

@{
	ViewData["Title"] = "Cuentas";

	string FormatiarBalance(decimal balance)
	{
		return Math.Abs(balance).ToString("N");
	}
}

<h1>Cuentas</h1>

<a asp-action="Crear" class="btn btn-primary mb-3">Crear Nuevo</a>

<div class="contenedor-totales mb-3">
	<div>
		<div>
			<strong>Activos</strong>
		</div>
		<div class="activo">
			@FormatiarBalance(Model.Where(x => x.Balance > 0).Sum(x => x.Balance))
		</div>
	</div>
	<div>
		<div>
			<strong>Pasivos</strong>
		</div>
		<div class="pasivos">
			@FormatiarBalance(Model.Where(x => x.Balance < 0).Sum(x => x.Balance))
		</div>
	</div>
	<div>
		<div>
			<strong>Total</strong>
		</div>
		<div>
			@FormatiarBalance(Model.Sum(x => x.Balance))
		</div>
	</div>
</div>